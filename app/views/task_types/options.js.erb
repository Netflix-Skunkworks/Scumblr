
$('#task_type_options').html("<%= escape_javascript(render :partial=>"options_fields", :locals => {:task_options=>@task.try(:options), task_type_options: @task_type_options, }) %>");
<% if @task_type_description.present? || @task_type_config_options.present? %>
  $("#task_description").html("<%= escape_javascript(render :partial=>"task_configuration", :locals => {:task_options=>@task.try(:options), task_type_options: @task_type_options, task_type_description: @task_type_description, task_type_configuration: @task_type_configuration }) %>")
<% else %>
  $("#task_description").html("")
<% end %>

